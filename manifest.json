{
  "manifest_version": 2,
  "name": "Pennies For Good",
  "description": "Help Donate!",
  "version": "1.00",
  "icons": {
    "128": "assets/penny.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [ "css/buy_window.css", "css/charity_window.css" ],
      "js": [ "js/index.js", "js/buy_window.js", "js/charity_window.js" ],
      "run_at": "document_end"
    }

  ],
  "browser_action": {
    "default_icon": "assets/penny.png",
    "default_popup": "html/extension_window.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "html/buy_window.html",
    "html/charity_window.html",
    "assets/penny.png"
  ]
}