{
  "manifest_version": 2,
  "name": "Pennies For Good",
  "description": "Help Donate!",
  "version": "1.00",
  "icons": {
    "128": "assets/penny.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "js/index.js"],
      "run_at": "document_end"
    }

  ],
  "browser_action": {
    "default_icon": "assets/penny.png",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "html/window.html",
    "assets/penny.png"
  ]
}